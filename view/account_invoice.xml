<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Invoice form modifications -->
        <record id="view_account_invoice_form_finnish_souts" model="ir.ui.view">
            <field name="name">account.invoice.form.finnish_scouts</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="after">
                    <field name="kuksa_number" class="oe_edit_only"/>
                    <field name="kuksa_link" widget="url" class="oe_read_only"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
